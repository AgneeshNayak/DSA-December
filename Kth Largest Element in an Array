
class Solution {
    public int findKthLargest(int[] nums, int k) {

        PriorityQueue<Integer> heap = new PriorityQueue<>();

        for (int i = 0; i < nums.length; i++) {
            heap.add(nums[i]);

            // keep only k elements in heap
            if (heap.size() > k) {
                heap.poll();
            }
        }

        // top of heap is the kth largest
        return heap.peek();
    }
}
